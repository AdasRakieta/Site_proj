version: '3.8'

services:
  nginx:
    image: nginx:alpine
    container_name: standalone_nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      # Nginx configuration
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./conf.d:/etc/nginx/conf.d:ro
      
      # SSL certificates (Tailscale)
      - /etc/ssl/tailscale:/etc/ssl/tailscale:ro
      
      # Static files from SmartHome (optional - można przez proxy)
      - smarthome_static_uploads:/srv/smarthome/static/profile_pictures:ro
      
      # Logs
      - ./logs:/var/log/nginx
      
    networks:
      # Połączenie ze wszystkimi projektami
      - smarthome-stack_default
      - journey-stack_journey-planner-net
      
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s

networks:
  # Zewnętrzne sieci - muszą już istnieć
  smarthome-stack_default:
    external: true
    name: smarthome-stack_default
    
  journey-stack_journey-planner-net:
    external: true
    name: journey-stack_journey-planner-net

volumes:
  # Współdzielony volume ze SmartHome
  smarthome_static_uploads:
    external: true
    name: smarthome-stack_static_uploads
