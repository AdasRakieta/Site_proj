<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration that permits cleartext traffic -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <domain-config cleartextTrafficPermitted="true">
        <!-- VPN IP (Server) -->
        <domain includeSubdomains="false">100.126.230.74</domain>
        <!-- VPN IP (Database) -->
        <domain includeSubdomains="false">100.103.184.90</domain>
        <!-- Local network IP (backup) -->
        <domain includeSubdomains="false">192.168.1.219</domain>
        <!-- Localhost for development -->
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>
</network-security-config>

