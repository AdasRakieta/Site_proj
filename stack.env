# ============================================================================
# SmartHome Multi-Home - Docker Stack Environment Configuration
# ============================================================================
# This file is used for Docker Stack/Swarm deployments
# Set these values in your deployment environment

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
# IMPORTANT: Set these to your actual database server details
DB_HOST=your_postgres_host
DB_PORT=5432
DB_NAME=smarthome_multihouse
DB_USER=smarthome_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_PORT=5000
SERVER_HOST=0.0.0.0

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARS

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_production_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ADMIN_EMAIL=admin@yourdomain.com

# ============================================================================
# Redis Configuration (Optional - Recommended for Production)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_URL=redis://redis:6379/0

# ============================================================================
# Application Settings
# ============================================================================
# Docker image tag to deploy
IMAGE_TAG=latest

# Asset versioning for cache busting (optional)
ASSET_VERSION=

# ============================================================================
# Security & Session (Production Settings)
# ============================================================================
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=WARNING

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_MULTI_HOME=true
